# {{ ansible_managed }}

# Root user and password
MINIO_ROOT_USER={{ minio_root_user }}
MINIO_ROOT_PASSWORD={{ minio_root_password }}

# Network options
MINIO_OPTS="--address {{ minio_listen_address }}:{{ minio_api_port }} --console-address :{{ minio_console_port }}"

# TLS options
{% if minio_tls_enabled %}
MINIO_OPTS="$MINIO_OPTS --certs-dir {{ minio_tls_cert_dir }}"
{% endif %}